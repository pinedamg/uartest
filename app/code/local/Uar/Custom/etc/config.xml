<?xml version="1.0"?>
<config>
    <modules>
        <Uar_Custom>
            <version>0.1.0</version>
        </Uar_Custom>
    </modules>
    <admin>
    </admin>
    <global>
        <models>
            <custom>
                <class>Uar_Custom_Model</class>
                <resourceModel>custom_entity</resourceModel>
            </custom>
        </models>
        <events>
            <checkout_cart_save_after>
                <observers>
                    <uar_custom_observer>
                        <type>singleton</type>
                        <class>Uar_Custom_Model_Observer</class>
                        <method>isSpecialShipping</method>
                    </uar_custom_observer>
                </observers>
            </checkout_cart_save_after>
            <checkout_cart_save_before>
                <observers>
                    <uar_custom_observer_remove_shipping>
                        <type>singleton</type>
                        <class>Uar_Custom_Model_Observer</class>
                        <method>removeSpecialShipping</method>
                    </uar_custom_observer_remove_shipping>
                </observers>
            </checkout_cart_save_before>
        </events>
        <blocks>
            <custom>
                <class>Uar_Custom_Block</class>
            </custom>
        </blocks>
        <helpers>
            <custom>
                <class>Uar_Custom_Helper</class>
            </custom>
        </helpers>
        <resources>
            <uar_custom_setup>
                <setup>
                    <module>Uar_Custom</module>
                    <class>Uar_Custom_Model_Entity_Setup</class>
                    <connection>core_setup</connection>
                </setup>
            </uar_custom_setup>
        </resources>
    </global>
    <adminhtml>
    </adminhtml>
    <frontend>
        <events/>
        <routers>
            <custom>
                <use>standard</use>
                <args>
                    <module>Uar_Custom</module>
                    <frontName>custom</frontName>
                </args>
            </custom>
        </routers>
        <translate>
            <modules>
                <Uar_Custom>
                    <files>
                        <default>Uar_Custom.csv</default>
                    </files>
                </Uar_Custom>
            </modules>
        </translate>
        <layout>
            <updates>
                <custom>
                    <file>custom.xml</file>
                </custom>
            </updates>
        </layout>
    </frontend>
    <default>
        <custom>
        </custom>
    </default>
    <phpunit>
        <suite>
            <modules>
                <Uar_Custom/>
            </modules>
        </suite>
    </phpunit>
</config>

