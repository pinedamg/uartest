        <reference name="root">
            <action method="setTemplate"><template>page/popup.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="core/text" name="uar_custom_block">
                <action method="setText"><text>TEXTO </text></action>
            </block>
        </reference>
